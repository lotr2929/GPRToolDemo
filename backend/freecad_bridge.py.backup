
FREECADPATH = r"C:\Program Files\FreeCAD 1.0\bin"

import sys
if FREECADPATH not in sys.path:
    sys.path.append(FREECADPATH)

import FreeCAD as App
import Part

def make_box(length=20.0, width=30.0, height=40.0):
    return Part.makeBox(length, width, height)

def tessellate_shape(shape, deflection=0.5):
    verts, tris = shape.tessellate(deflection)
    return verts, tris
